<h2><%= @merchant.name %>

<%= link_to "My Items", "/merchants/#{@merchant.id}/items" %>
<%= link_to "My Invoices", "/merchants/#{@merchant.id}/invoices" %>
<h3>Top 5 Customers</h3>
<ol>
  <% @merchant.top_5_customers.each do |customer| %>
    <li><%= customer.first_name %>: <%= customer.transaction_count %></li></br>
  <% end %>
</ol>

<h3>Items Ready to Ship</h3>

  <% @merchant.items.pending_items.each do |item| %>
    Item Name: <%= item.name %> </br>
    Pending Invoices: </br> <% item.invoices.order(created_at: :asc).each do |invoice| %>
      <%= link_to "#{invoice.id}", "/merchants/#{@merchant.id}/invoices/#{invoice.id}" %> <%= "#{invoice.created_at.to_datetime.strftime("%A, %B %d, %Y")}" %></br>
      <% end %>
  <% end %>
