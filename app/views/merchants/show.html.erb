<h2><%= @merchant.name %>

<%= link_to "My Items", "/merchants/#{@merchant.id}/items" %>
<%= link_to "My Invoices", "/merchants/#{@merchant.id}/invoices" %>
<h3>Top 5 Customers</h3>
<ol>
  <% @merchant.top_5_customers.each do |customer| %>
    <li><%= customer.first_name %>: <%= customer.transaction_count %></li></br>
  <% end %>
</ol>

<h3>Items Ready to Ship</h3>
    <div id="pending_items">
      <% @merchant.items.each do |item| %>
        <%= item.name %> Invoices: <% item.pending_items.each do |invoice| %>
          <a href="merchants/<% @merchant.id %>invoices/<% invoice.invoice_id %>" %>><%= invoice.invoice_id %></a>
          <% end %>
        <%=  %></br>
      <% end %>
    </div>
